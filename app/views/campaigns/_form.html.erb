<%= form_for(@campaign) do |f| %>
  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

      <ul>
      <% @campaign.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </div>
  <input type="hidden" id="campaign_gm_id" name="campaign[campaign_members_attributes][0][user_id]"
         value="<%= current_user.id %>" />
  <input type="hidden" id="campaign_gm_role" name="campaign[campaign_members_attributes][0][role]"
         value="<%= CampaignRole::GM %>" />  
  
  <div class="actions">
    <%= link_to 'Cancel', campaigns_path, :class => 'form_action negative' %>
    <%= f.submit :class => 'form_action primary' %>
  </div>
<% end %>
