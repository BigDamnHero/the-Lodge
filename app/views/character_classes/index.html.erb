<h1 id="races_heading" class="page_heading">Classes</h1>

<div id="member_actions" class="actions_menu">
    <%= link_to 'New Class', new_character_class_path, :class => 'action_link' %>
</div>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
    </tfoot>
    <tbody>
    <% @classes.each do |c| %>
        <tr>
            <td><%= c.name %></td>
            <td class="control"><%= link_to 'Show', c, :class => 'item_action_link' %></td>
            <td class="control"><%= link_to 'Edit', edit_character_class_path(c), :class => 'item_action_link' %></td>
            <td class="control"><%= link_to 'Destroy', c, :confirm => 'Are you sure?', :method => :delete, :class => 'item_action_link' %></td>
        </tr>
    <% end %>
    </tbody>
</table>

